@model List<MediSync.Models.ScheduleViewModel>

@{
    ViewBag.Title = "ViewSchedules";
    Layout = "~/Views/Shared/_PatientLayout.cshtml";
}

<h3 class="text-center p-md-2">View Schedules</h3>
<table class="table table-striped table-hover text-center">
    <thead>
        <tr>
            <th>Appointment Date</th>
            <th>Appointment Reason</th>
            <th>Schedule Date Time</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var schedule in Model)
        {
            <tr>
                <td>@schedule.AppointmentDate</td>
                <td>@schedule.AppointmentReason</td>
                <td>@schedule.ScheduleDateTime</td>
                <td>
                    <a href="~/PatientAction/DownloadReport?ScheduleID=@schedule.ScheduleID"><button class="btn btn-primary">Download</button></a>
                </td>
            </tr>
        }
    </tbody>
</table>

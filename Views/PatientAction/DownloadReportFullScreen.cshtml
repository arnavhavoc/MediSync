@{
    ViewBag.Title = "DownloadReport";
    Layout = null;
    MediSync.Models.Physician physician = ViewBag.Physician as MediSync.Models.Physician;
    //MediSync.Models.Patient patient = ViewBag.Patient as MediSync.Models.Patient;
    List<MediSync.Models.DrugNameDoseModel> drugNameDoseModel = ViewBag.Prescription as List<MediSync.Models.DrugNameDoseModel>;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>DownloadReportFullScreen</title>
    <style>
        body {
            font-family: Arial, sans-serif;
        }

        .container {
            max-width: 800px;
            margin: auto;
        }

        .text-center {
            text-align: center;
        }

        .logo {
            max-width: 150px;
            margin-bottom: 20px;
        }

        .prescription-header {
            text-align: center;
            font-size: 24px;
            font-weight: bold;
            margin-top: 30px;
        }

        .prescription-details {
            margin-top: 20px;
        }

            .prescription-details p {
                margin-bottom: 5px;
            }

            .prescription-details textarea {
                width: 100%;
                height: 80px;
                margin-bottom: 20px;
            }

        .verification-stamp {
            text-align: right;
            margin-top: 20px;
        }

            .verification-stamp img {
                width: 200px;
                height: 200px;
            }
    </style>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
</head>
<body>
    <div class="container-fluid" id="printContent">
        <div class="text-center">
            <img src="~/img/Logo_Header.png" alt="Hospital Logo" class="logo" />
        </div>
        <div class="text-center">
            <b>MEDISYNC CLINIC</b> <br />
            <i>Committed to Health, Committed to You</i> <br />
            Near Axis Mall, Newtown
            Kolkata - 700102 | info@@medisync.com
        </div>
        <hr />
        <div class="prescription-details">
            <div class="row">
                <div class="col-sm text-left">
                    <p><strong>Date:</strong> @DateTime.Now.Date.ToString("dd-MMM-yyyy")</p>
                    <p><strong>Patient Name:</strong> @ViewBag.Patient </p>
                </div>
                <div class="col-sm text-right">
                    <p><strong>Physician Name:</strong> Dr.@physician.physicianFirstName @physician.physicianLastName</p>
                    <p><strong>Schedule Date:</strong> @ViewBag.ScheduleDate</p>
                </div>
            </div>
            <hr />
            <p><strong>Advice:</strong></p>
            <text readonly>@ViewBag.Advice</text>
            <hr />
            <p><strong>Prescribed Medicine:</strong></p>
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th scope="col">Drug Name</th>
                        <th scope="col">Dosage</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in drugNameDoseModel)
                    {
                        <tr>
                            <td scope="row">@item.DrugName</td>
                            <td>@item.DrugDose</td>
                        </tr>
                    }
                </tbody>
            </table>
            <div class="verification-stamp">
                <img src="~/img/MediStamp.png" width="200px" height="200px" />
            </div>
        </div>
    </div>

    <div class="text-center">
        <button type="button" onclick="window.print()" class="btn btn-success">Print Prescription</button>
    </div>

    <!-- Bootstrap core JavaScript-->
    <script src="~/vendor/jquery/jquery.min.js"></script>
    <script src="~/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>

    <!-- Core plugin JavaScript-->
    <script src="~/vendor/jquery-easing/jquery.easing.min.js"></script>

    <!-- Custom scripts for all pages-->
    <script src="~/js/sb-admin-2.min.js"></script>

    <!-- Page level plugins -->
    <script src="~/vendor/chart.js/Chart.min.js"></script>

    <!-- Page level custom scripts -->
    <script src="~/js/demo/chart-area-demo.js"></script>
    <script src="~/js/demo/chart-pie-demo.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>

</body>
</html>
